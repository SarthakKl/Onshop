<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/cardViewColor"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/shopRv_ProductImage"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:contentDescription="@string/product_image"/>

            <com.example.shoppingapp.Utils.CustomTextView
                android:id="@+id/shopRv_productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"/>
            <com.example.shoppingapp.Utils.CustomTextView
                android:id="@+id/shopRv_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Item Price"
                android:layout_marginTop="2dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/shopRv_view"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="@color/transparent"/>
</FrameLayout>
